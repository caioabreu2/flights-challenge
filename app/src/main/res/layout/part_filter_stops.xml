<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="35dp"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp">

    <CheckBox
        android:id="@+id/nonstop_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/part_filter_stop_nonstop_flight"
        android:tag="5"
        android:textColor="@color/battleshipGrey"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/one_stop_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/part_filter_stop_onestop_flight"
        android:tag="6"
        android:textColor="@color/battleshipGrey"
        android:textStyle="bold"/>

</LinearLayout>